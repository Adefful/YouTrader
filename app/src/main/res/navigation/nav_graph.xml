<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/authFragment">


    <fragment
        android:id="@+id/authFragment"
        android:name="com.technopark.youtrader.ui.auth.AuthFragment"
        android:label="FirstFragment">
        <action
            android:id="@+id/action_authFragment_to_secondFragment"
            app:destination="@id/secondFragment">
            <argument
                android:name="someString"
                app:argType="string"
                android:defaultValue="empty" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.technopark.youtrader.ui.currencies.SecondFragment"
        android:label="SecondFragment">
        <action
            android:id="@+id/action_secondFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_secondFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.technopark.youtrader.ui.profile.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profileFragment_to_secondFragment"
            app:destination="@id/secondFragment"
            app:popUpTo="@id/secondFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileFragment_to_withoutBottomNavViewFragment"
            app:destination="@id/withoutBottomNavViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/withoutBottomNavViewFragment"
        android:name="com.technopark.youtrader.ui.WithoutBottomNavViewFragment"
        android:label="WithoutBottomNavViewFragment" />
</navigation>