<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/indent_very_small"
            >

            <Button
                android:id="@+id/button_1"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="1"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded.Filled"
                />

            <Button
                android:id="@+id/button_2"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="2"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded.Filled"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="3"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded.Filled"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/indent_very_small">


            <Button
                android:id="@+id/button_4"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="4"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded.Filled"/>

            <Button
                android:id="@+id/button_5"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="5"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded.Filled"/>

            <Button
                android:id="@+id/button_6"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="6"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded.Filled"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/indent_very_small">


            <Button
                android:id="@+id/button_7"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="7"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded.Filled"/>

            <Button
                android:id="@+id/button_8"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="8"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded.Filled"/>

            <Button
                android:id="@+id/button_9"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="9"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded.Filled"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/indent_very_small">

            <Button
                android:id="@+id/button_exit"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text=""
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded"/>

            <Button
                android:id="@+id/button_0"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="0"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded.Filled"/>

            <Button
                android:id="@+id/button_delete"
                android:layout_width="@dimen/indent_very_big"
                android:layout_height="@dimen/indent_very_big"
                android:text="C"
                android:textSize="@dimen/indent_medium"
                android:layout_margin="@dimen/indent_very_small"
                style="@style/Component.Button.Rounded"/>

        </LinearLayout>
    </LinearLayout>

</merge>