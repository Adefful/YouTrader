<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ТыТрейдер"

        style="@style/TextViewTitle"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login"/>

    <EditText
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/RoundedEditText"
        android:paddingHorizontal="@dimen/indent_very_small"
        android:inputType="textVisiblePassword|textNoSuggestions"

        android:hint="@string/enter_login_hint"
        android:layout_marginStart="@dimen/indent_big"
        android:layout_marginEnd="@dimen/indent_big"

        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/RoundedEditText"
        android:paddingHorizontal="@dimen/indent_very_small"
        android:hint="@string/enter_password_hint"
        android:inputType="textPassword"

        android:layout_marginTop="@dimen/indent_small"
        android:layout_marginStart="@dimen/indent_big"
        android:layout_marginEnd="@dimen/indent_big"

        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonSign" />


    <Button
        android:id="@+id/buttonSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent_small"

        android:text="@string/enter_button_text"
        style="@style/RoundedFilledButton"

        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintEnd_toEndOf="@id/password" />



    <Button
        android:id="@+id/buttonToNextFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/WithoutBackground"
        android:textSize="@dimen/text_size_h4"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>