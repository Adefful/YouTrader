<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/fragment_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Second fragment text"
        android:textSize="@dimen/text_size_h4"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_argument" />

    <TextView
        android:id="@+id/fragment_argument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Empty string"
        android:textSize="@dimen/text_size_h4"

        app:layout_constraintTop_toBottomOf="@id/fragment_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_back_to_auth_fragment" />

    <Button
        android:id="@+id/button_back_to_auth_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Back to first Fragment"
        android:textSize="@dimen/text_size_h4"

        app:layout_constraintTop_toBottomOf="@id/fragment_argument"
        app:layout_constraintBottom_toTopOf="@id/button_to_profile_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_to_profile_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Go to Profile Fragment"
        android:textSize="@dimen/text_size_h4"

        app:layout_constraintTop_toBottomOf="@id/button_back_to_auth_fragment"
        app:layout_constraintBottom_toTopOf="@id/buttonUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/buttonUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Up"
        android:textSize="@dimen/text_size_h4"

        app:layout_constraintTop_toBottomOf="@id/button_to_profile_fragment"
        app:layout_constraintBottom_toTopOf="@id/buttonBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Back"
        android:textSize="@dimen/text_size_h4"
        app:layout_constraintTop_toBottomOf="@id/buttonUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>