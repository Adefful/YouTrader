<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Component.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_tint</item>

        <item name="android:layout_marginStart">@dimen/indent_big</item>
        <item name="android:layout_marginEnd">@dimen/indent_big</item>

        <item name="android:paddingTop">@dimen/indent_small</item>
        <item name="android:paddingBottom">@dimen/indent_small</item>
    </style>

    <style name="Component.EditText.OneLine">
        <item name="android:maxLines">1</item>
    </style>

    <style name="Component.EditText.Rounded">
        <item name="android:background">@drawable/rect_radius_100</item>
    </style>

    <style name="Component.EditText.Rounded.Filled">
        <item name="backgroundTint">@color/hawkes_blue</item>
    </style>

</resources>