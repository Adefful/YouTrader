<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedView">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:background">@drawable/rect_radius_100</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/indent_very_small</item>
    </style>

    <style name="OneLineTextView" parent="TextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RoundedTextView" parent="TextView">
        <item name="android:background">@drawable/rect_radius_100</item>
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/hawkes_blue</item>
    </style>


    <style name="TextViewTitle" parent="TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>


    <style name="RoundedEditText" parent="RoundedView">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:background">@drawable/rect_radius_100</item>
        <item name="backgroundTint">@color/hawkes_blue</item>
        <item name="android:textColorHint">@color/black_tint</item>
        <item name="android:paddingStart">@dimen/indent_small</item>
        <item name="android:paddingTop">@dimen/indent_small</item>
        <item name="android:paddingBottom">@dimen/indent_small</item>
    </style>

    <style name="RoundedButton" parent="RoundedView">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RoundedFilledButton" parent="RoundedButton">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="backgroundTint">@color/heather</item>
    </style>

    <style name="RectangularButton">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="RectangularFilledButton" parent="RectangularButton">
        <item name="backgroundTint">@color/heather</item>
    </style>

    <style name="CustomCardView">
        <item name="android:background">@drawable/rect_radius_100</item>
        <item name="android:elevation">2dp</item>
        <item name="android:backgroundTint">@color/hawkes_blue</item>
    </style>

</resources>